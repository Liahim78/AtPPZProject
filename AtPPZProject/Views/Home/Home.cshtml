@model IEnumerable<DAL.Entity.Video>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home</h2>
<p>
    @Html.ActionLink("Editing profile", "EditProfile")
</p>
<p>
    @Html.ActionLink("Create New Event", "Create", "Events")
</p>
<p>
    @Html.ActionLink("Create New Video", "Create")
</p>
<table class="table">
    <tr>
    <th>
        @Html.DisplayNameFor(model => model.UrlVideoContent)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Discription)
    </th>
    <th></th>
</tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            <video controls="controls"
                   class="video-stream"
                   x-webkit-airplay="allow"
                   data-youtube-id="N9oxmRT2YWw"
                   src="@item.UrlVideoContent"></video>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Likes.Count)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
